<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dialog_title_margin"
        android:text="?attr/DialogTitleText"
        android:textAppearance="?attr/DialogTitleAppearance" />

    <com.esint.communitytools.dialog.ProgressLayout
        android:id="@+id/dialog_progress"
        android:layout_width="@dimen/dialog_progress_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dialog_progress_margin" />

</LinearLayout>