<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background_login"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="@dimen/tools_padding_default" >

    <TextView
        style="@style/font_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/bindserviceDialog_title" />

    <EditText
        android:id="@+id/et_bindserviceDialog_code"
        style="@style/font_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tools_padding_default"
        android:drawableLeft="@drawable/ic_launcher"
        android:gravity="center_vertical"
        android:hint="@string/bindserviceDialog_hint"
        android:padding="@dimen/tools_padding_small"
        android:singleLine="true" />

    <Button
        android:id="@+id/bt_bindserviceDialog_bind"
        style="@style/button_dialog_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tools_padding_default"
        android:text="@string/bindserviceDialog_bind" />

    <Button
        android:id="@+id/bt_bindserviceDialog_cancel"
        style="@style/button_dialog_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tools_padding_small"
        android:text="@string/bindserviceDialog_cancel" />

</LinearLayout>